            android:textColor="@color/white"
            android:text="Machu Picchu" />
        <Button
            android:id="@+id/btn6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:backgroundTint="@color/black"
