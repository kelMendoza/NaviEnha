<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Calculadora">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/resultado"
            android:layout_width="match_parent"
            android:layout_height="229dp"
            android:layout_gravity="end"
            android:text=""
            android:textSize="40sp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:accessibilityTraversalAfter="@id/resultado"
            android:columnCount="6"
            android:orientation="vertical"
            android:rowCount="5">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp">

                <Button
                    android:id="@+id/btnclear"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/colorText"
                    android:text="C"
                    android:textColor="@color/orangeSelected"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/btnporcentaje"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/colorText"
                    android:textColor="@color/green"
                    android:text="%"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/btndiv"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="112dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/colorText"
                    android:textColor="@color/green"
                    android:text="/"
                    android:textSize="40sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp">

                <Button
                    android:id="@+id/siete"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="7"
                    android:textColor="@android:color/white"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/ocho"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="8"
                    android:textColor="@android:color/white"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/nueve"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="9"
                    android:textColor="@android:color/white"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/btnproducto"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="112dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/colorText"
                    android:textColor="@color/green"
                    android:padding="20sp"
                    android:text="x"
                    android:textSize="40sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp">

                <Button
                    android:id="@+id/cuatro"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="4"
                    android:textColor="@android:color/white"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/cinco"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="5"
                    android:textColor="@android:color/white"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/seis"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="6"
                    android:textColor="@android:color/white"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/btnresta"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="112dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/colorText"
                    android:textColor="@color/green"
                    android:text="-"
                    android:textSize="50sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp">

                <Button
                    android:id="@+id/uno"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textColor="@android:color/white"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/dos"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:textColor="@android:color/white"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/tres"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="3"
                    android:textColor="@android:color/white"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/btnsuma"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/colorText"
                    android:textColor="@color/green"
                    android:text="+"
                    android:textSize="50sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp">


                <Button
                    android:id="@+id/cero"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/btnpunto"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="."
                    android:textColor="@android:color/white"
                    android:textSize="50sp" />


                <Button
                    android:id="@+id/btnigual"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:text="="
                    android:backgroundTint="@color/colorText"
                    android:textColor="@color/green"
                    android:textSize="50sp"
                    android:theme="@style/CalculatorOperations"/>
            </LinearLayout>


        </GridLayout>
    </LinearLayout>

</FrameLayout>