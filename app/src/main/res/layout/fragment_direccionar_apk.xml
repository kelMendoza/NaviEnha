<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fondo2"
    tools:context=".DireccionarApk">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorTextoTransparente3"
        android:layout_margin="35dp">

        <ImageView
            android:layout_width="291dp"
            android:layout_height="39dp"
            android:layout_margin="18dp"
            app:srcCompat="@drawable/apktitulo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:text="Aquí tenemos algunas sugerencias de aplicaciones en donde puedes encontrar mayor información sobre algunos lugares turísticos al rededor del mundo."
            android:textStyle="bold"
            android:textSize="15dp"/>

        <ImageView
            android:id="@+id/btninstagram"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="18dp"
            android:src="@drawable/instagram" />
        <ImageView
            android:id="@+id/btnyoutube"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="18dp"
            android:src="@drawable/youtube" />
        <ImageView
            android:id="@+id/btnfacebook"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="18dp"
            android:src="@drawable/facebook" />

        <ImageView
            android:id="@+id/btntwitter"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="18dp"
            android:src="@drawable/twitter" />
<!--        <ImageView
            android:id="@+id/btntoki"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="18dp"
            android:src="@drawable/toki" />-->


    </LinearLayout>

</FrameLayout>